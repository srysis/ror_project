<article>
	<h2>Your Cart</h2>
	<hr>
	<table>
		<%= render(cart.line_items) %>
		<tfoot>
			<tr>
				<th colspan="2">Total:</th>
				<td class="price"><%= cart.total_price %></td>
			</tr>
		</tfoot>
	</table>
	<br>
	<span class = "actions">
		<%= button_to 'Make cart empty', cart, method: :delete, class: "remove", data: { confirm: 'Are you sure?' } %>
		<%= button_to 'Checkout', new_order_path, method: :get, class: "checkout" %>
	</span>
</article>